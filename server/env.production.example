# Configuracion para ambiente PRODUCCION (shc.com.mx)
# Copia este archivo a .env y ajusta los valores segun tu configuracion

# Configuracion del servidor
PORT=3000
NODE_ENV=production

# API Keys
DIPOMEX_KEY=tu_clave_dipomex_aqui

# Seguridad y secretos
# Genera un JWT_SECRET diferente para produccion
# Puedes generar uno con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=tu_jwt_secret_production_muy_largo_y_seguro_aqui
JWT_EXPIRES_IN=1d

# Base de datos - PRODUCCION
DB_USER_HOST=localhost
DB_USER_PORT=3306
DB_USER_USER=ssc_user_production
DB_USER_PASSWORD=tu_password_production_seguro
DB_USER_NAME=ssc_db_production

# CORS - URLs permitidas para produccion
CORS_ORIGIN=https://shc.com.mx,https://www.shc.com.mx

