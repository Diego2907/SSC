# Configuracion para ambiente STAGING (staging.shc.com.mx)
# Copia este archivo a .env y ajusta los valores segun tu configuracion

# Configuracion del servidor
PORT=3000
NODE_ENV=production

# API Keys
DIPOMEX_KEY=tu_clave_dipomex_aqui

# Seguridad y secretos
# Genera un JWT_SECRET diferente para staging
# Puedes generar uno con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=tu_jwt_secret_staging_muy_largo_y_seguro_aqui
JWT_EXPIRES_IN=1d

# Base de datos - STAGING
# Usa una base de datos separada para staging
DB_USER_HOST=localhost
DB_USER_PORT=3306
DB_USER_USER=ssc_user_staging
DB_USER_PASSWORD=tu_password_staging_seguro
DB_USER_NAME=ssc_db_staging

# CORS - URLs permitidas para staging
CORS_ORIGIN=https://staging.shc.com.mx,http://staging.shc.com.mx

